# Firebase Admin SDK Configuration
# Option 1: Path to service account key file
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Option 2: Service account key as JSON string (for environments where file path is not preferred)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id
# Alternative env var name
# GCP_PROJECT_ID=your-project-id

# BigQuery Dataset ID (will be created if it doesn't exist)
BIGQUERY_DATASET_ID=scorecard_data

# Google Cloud Credentials (optional, if not using default)
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/credentials.json

